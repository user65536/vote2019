.wrapper-detail
  .blur-wrap
    &.blur
      filter blur(5px)
    .content-mobile
      .picture
        width 100%
      .text
        padding 0px 16px
        .title
          padding 8px 0
          font-size 18px
          line-height 24px
          font-weight bold
          border-bottom 1px solid #E3E3E3
        .about
          margin-top 8px
          display flex
          justify-content flex-start
          .item
            flex 0 0 auto
            color #8b8b8b
            margin-right 8px
            .value
              margin-left 4px
        .intro
          margin 24px 0
          font-size 14px
          line-height 30px
      .vote-now
        position fixed
        bottom 100px
        right 32px
        width 48px
        height 48px
        color rgba(255, 255, 255, .6)
        line-height 48px
        text-align center
        background-color rgba(42, 118, 220, .6)
        border-radius 50%
        transition all ease-out .2s
        &:hover
          color #fff
          background-color rgba(42, 118, 220, .8)
        .iconfont
          font-size 30px
    .content-pc
      padding 0 10%
      .top
        margin-top 72px
        .picture
          position relative
          width 414px
          height 310px
          box-shadow 0 0 8px 0px rgba(0, 0, 0, .1)
          .title
            position absolute
            color #DADADA
            width 100%
            height 83px
            bottom 0
            left 0
            right 0
            background linear-gradient(0deg, rgba(0,0,0,.8) 0%, rgba(0,0,0,.5) 50%, rgba(0,0,0,0))
            span 
              position absolute
              left 0
              right 0
              bottom 0
              padding 8px 16px 0



@media(max-width 500px)
  .content-pc
    display none

@media(min-width 500px) and (max-width 850px)
  .content-mobile
    display none
@media(min-width 850px)
  .content-mobile
    display none