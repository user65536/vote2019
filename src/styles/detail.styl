.wrapper-detail
  .blur-wrap
    &.blur
      filter blur(5px)
    .content-mobile
      .picture
        width 100%
      .text
        padding 0px 16px
        .title
          padding 8px 0
          font-size 18px
          line-height 24px
          font-weight bold
          border-bottom 1px solid #E3E3E3
        .about
          margin-top 8px
          display flex
          justify-content flex-start
          .item
            flex 0 0 auto
            color #8b8b8b
            margin-right 8px
            .value
              margin-left 4px
        .intro
          margin 24px 0
          font-size 14px
          line-height 30px
      .vote-now
        position fixed
        bottom 100px
        right 32px
        width 48px
        height 48px
        color rgba(255, 255, 255, .6)
        line-height 48px
        text-align center
        background-color rgba(42, 118, 220, .6)
        border-radius 50%
        transition all ease-out .2s
        &:hover
          color #fff
          background-color rgba(42, 118, 220, .8)
        .iconfont
          font-size 30px
    .content-pc
      padding 0 10%
      .top
        display flex
        margin-top 72px
        .picture
          flex 0 4 auto
          position relative
          width 414px
          // height 310px
          box-shadow 0 0 8px 0px rgba(0, 0, 0, .1)
          .title
            position absolute
            color #DADADA
            width 100%
            height 83px
            bottom 0
            left 0
            right 0
            background linear-gradient(0deg, rgba(0,0,0,.8) 0%, rgba(0,0,0,.5) 50%, rgba(0,0,0,0))
            span 
              position absolute
              left 0
              right 0
              bottom 0
              padding 8px 16px 0
        .right
          display flex
          flex-direction column
          justify-content flex-start
          .about
            display flex
            flex-direction column
            justify-content space-between
            flex 1 
            .info
              flex 1 1 
              .name,.iconfont
                vertical-align middle
                color #8B8B8B
              .value
                display table-cell
                vertical-align middle
          .vote-now
            display inline-block
            flex 0 0 43px
            border none 
            outline none
            box-shadow 1px 3px 11px rgba(0, 0, 0, .22)
            background linear-gradient(-45deg, #4D93F1, #0A73FF)
            border-radius 6px
            font-size 16px
            letter-spacing 8px
            color #ffffff
            transition all ease-out .4s
            &:hover
              color #eee
              box-shadow 1px 3px 11px rgba(0, 0, 0, .6)
      .intro-title
        margin-top 48px
        color #424242
        font-size 24px
        padding-bottom 4px
        border-bottom 1px solid #707070
      .intro
        margin-top 24px
        font-size 18px
        line-height 32px
        color #424242





@media(max-width 599px)
  .content-pc
    display none

@media (min-width 600px) and (max-width 849px)
  .content-mobile
    display none
  .content-pc
    .right
      margin-left 4%
      flex 1 4 auto
      .about
        .info
          font-size 16px
          .value
            padding-left 12px
          .name
            display none
          .iconfont
            display table-cell
            font-size 24px
          .icon-small
            font-size 20px
    .vote-now
      margin-top 24px


@media(min-width 850px)
  .content-mobile
    display none
  .content-pc
    .right
      margin-left 6%
      flex 0 4 auto
      .about
        width auto
        .info
          font-size 18px
          .iconfont
            display none
          .name
            display table-cell
            width 80px
          .value
            padding-left 18px
    .vote-now
      margin-top 12px     

@media(min-width 600px) and (max-width 710px)
  .content-pc
    .top
      .picture
        .title
          font-size 12px