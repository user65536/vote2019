
.wrapper-gallery
  .content
    width 90%
    margin 0 auto
    padding-bottom 24px
    display flex
    flex-direction row
    justify-content flex-start
    flex-wrap wrap
    .card-wrap
      margin-top 48px
      border-radius 8px
      box-shadow 0px 0px 10px 0px rgba(0,0,0,.2)
      overflow hidden
      cursor pointer
      transition all ease-out 0.2s
      &:hover
        box-shadow 0px 0px 16px 0px rgba(0,0,0,.4)
  .footer
    margin 24px 5%
    text-align center
    color #8B8B8B
    font-size 14px
    .bottom
      margin 0 10%

@media(max-width 700px)
  .wrapper-gallery
    .content
      .card-wrap
        flex 0 0 48%
        margin-left 1%
        margin-right 1%
@media(min-width 700px) and (max-width 1000px)
  .wrapper-gallery
    .content
      .card-wrap
        flex 0 0 29.3%
        margin-left 2%
        margin-right 2%
@media(min-width 1000px)
  .wrapper-gallery
    .content
      .card-wrap
        flex 0 0 21%
        margin-left 2%
        margin-right 2%
