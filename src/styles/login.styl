cl-g = #8b8b8b
cl-w = #ffffff
input 
  border none 
  outline none


.login-wrap
  width 292px
  height 372px
  border-radius 7px
  box-shadow 0px 0px 11px 0px rgba(0, 0, 0, 0.99)
  overflow hidden
  .login-inner
    width 75%
    margin auto
    margin-top 60px
    .input-bar-wrap
      height 28px
      line-height 28px
      margin-bottom 25px
      input 
        padding-left 4%
    .btn-login
      width 100%
      height 36px
      line-height 36px
      color cl-w
      border-radius 18px;
      box-shadow 0px 6px 15px 0px rgba(52, 65, 74, 0.35)
      margin-top 60px
      background-color #46c63d
      text-align center
    .skip
      margin-top 16px
      text-align center
      text-decoration underline



@media(max-width 700px)
  input
    color: cl-w
  .icon-user, .icon-pass
    color cl-w
  .input-bar-wrap
    border-bottom 1px solid cl-w
    input 
      color cl-w
  .skip
    color #bcbcbc
    font-size 0.8rem

@media(max-width 400px)
  .wrapper
    display block
@media(min-width 400px) and (max-width 700px)
  .wrapper
    display block
@media(min-width 700px)
  .icon-user, .icon-pass
    color cl-g
  .input-bar-wrap
    border-bottom 1px solid cl-g
  .skip
    color cl-g
    font-size 0.5rem
