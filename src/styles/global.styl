// 全局样式
input 
  border none 
  outline none
  background-color transparent
html, body
  height 100%
  min-width 360px
  // overflow hidden
  background-color #fafafa
  color #424242
.justify
  text-align justify
  &:after
    content ''
    width 100%
    display inline-block

.alert
  position fixed
  z-index 1000
  top -80px
  left 50%
  transform translateX(-50%)
  min-width 150px
  height 50px
  background-color rgba(0, 0, 0, .6)
  color #eee
  border-radius 4px
  line-height 50px
  text-align center
  &.show
    animation alert ease-in-out 2.5s

@keyframes alert {
  0% {
    top -80px
  }
  25% {
    top 50px
  }
  75% {
    top 50px
  }
  100% {
    top -80px
  }
}

    