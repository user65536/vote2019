.lottery-wrapper
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  .turntable-wrap
    .pointer
      margin 0 auto
      width 0px
      height 0px
      border 10px solid transparent
      transform  translateY(5px)
      border-top 10px solid #565656
    .turntable
      width 200px
      height 200px
      background-image url('../static/lottery.png')
      background-position center center
      background-size cover
      transition transform cubic-bezier(0.42, 0, 0.04, 0.99) 2s
      // transform rotate(0deg)
  .start
    margin-top 36px
    width 200px
    height 36px
    border-radius 4px
    border 2px solid #C78223
    text-align center
    line-height 36px
    font-size 18px
    color #C78223
    cursor pointer
    &.disable
      color #BAB5AE
      border 2px solid #BAB5AE
  .info
    margin-top 12px
    text-align center
    font-size 14px
    color #999999
  .form-wrap
    margin-top 36px
    padding-bottom 48px
    .info
      color #636363
    .form
      margin-top 12px
      .form-item
        margin-bottom 12px
        display flex
        align-items center
        .item-name
          width 48px
          flex 0 0 48px
          padding-right 12px
        .input
          width 10px
          flex 1 1 10px
          height 24px
          border 1px solid lightgray
          border-radius 2px
    .submit
      margin-top 24px
      font-size 18px
      text-align center
      color #6377CB
      cursor pointer