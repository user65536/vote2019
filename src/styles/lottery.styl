.lottery-wrapper
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  .turntable-wrap
    .pointer
      margin 0 auto
      width 0px
      height 0px
      border 10px solid transparent
      transform  translateY(5px)
      border-top 10px solid #565656
    .turntable
      width 200px
      height 200px
      background-image url('../static/lottery.png')
      background-position center center
      background-size cover
      transition transform ease-in-out 2s
      transform rotate(700deg)
  .start
    margin-top 36px
    width 200px
    height 36px
    border-radius 4px
    border 2px solid #C78223
    text-align center
    line-height 36px
    font-size 18px
    color #C78223