.img-wrap
  height 10px
  width 100%
  padding-bottom 75%
  position relative
  .img
    position absolute
    left 0
    top 0
    bottom 0
    right 0
.project-info 
  padding 5% 5% 0 5%
  .title
    line-height 0.9rem
    height 1.8rem
    padding-bottom 4%
    font-size 0.8rem
  .number-wrap
    border-top 1px solid #E4E4E4
    width 70%
    padding 3% 0
    .number
      display inline-block
      margin-right 4%
      color #8B8B8B
      font-size 0.8rem
      line-height 0.8rem
      .iconfont
        display inline-block
      .value
        display inline-block
        width 1.7rem
        padding-left 0.2rem

@media(min-width 500px) and (max-width 850px)
  html
    font-size 18px !important
@media(min-width 850px)
  html
    font-size 20px !important
        
