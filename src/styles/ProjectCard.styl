.card
  .point-2
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical;
  .img-wrap
    height 10px
    width 100%
    padding-bottom 75%
    position relative
    .img
      position absolute
      left 0
      top 0
      bottom 0
      right 0
  .project-info 
    padding 5% 5% 0 5%
    background #ffffff
    .title
      height 32px
      line-height 16px
      margin-bottom 4%
      color #424242
    .number-wrap
      border-top 1px solid #E4E4E4
      width 70%
      padding 5px 0
      .number
        display inline-block
        margin-right 4%
        color #8B8B8B
        font-size 0.8rem
        line-height 0.8rem
        .iconfont
          display inline-block
        .value
          display inline-block
          padding-left 3px
@media(max-width 450px)
  .card
    .title
      font-size 13px
@media(min-width 450px) and (max-width 1000px)
  .card
    .title
      font-size 15px
@media(min-width 1000px)
  .card
    .title
      font-size 15px