.blank
    height 48px
.wrapper-nav
    display flex
    justify-content space-between
    position fixed
    padding 12px 16px 12px
    height 48px
    top 0
    z-index 100
    box-sizing border-box
    width 100%
    min-width 360px
    background-color #ffffff
    border-bottom #e3e3e3
    box-shadow 0px 3px 12px 0px rgba(0, 0, 0, .15)
    transition all ease-out .3s
    &.blur
        filter blur(5px)
    .logo
        width 82px
        height 0px
        margin 3px 0
        padding-top 18px
        background-image url("../static/logo.png") 
        background-size cover
        background-repeat no-repeat
        cursor pointer
    .slot
        line-height 18px
        .iconfont
            margin-left 4px
            color #ccc

    .right
        .ticker
            display inline-block
            color #919191
            .num
                margin-left 4px
        .user
            display inline-block
            padding-left 12px
            color #424242
        .quit
            display inline-block
            width 48px
            padding 4px 0
            text-align center
            margin-left 10px
            .iconfont
                font-size 16px
                color #2A76DC
        .login 
            border none 
            outline none
            background #4D93F1
            margin-right 3vw
            padding 0
            height 24px
            width 48px
            border-radius 112px
            color #ffffff
            transition all ease-out .2s
            &:hover
                color #eeeeee





@media(max-width 500px)
    .wrapper-nav
        // .logo
