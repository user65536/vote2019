.black
    height 48px
.wrapper-nav
    display flex
    justify-content space-between
    position fixed
    padding 16px 16px 14px
    height 48px
    top 0
    z-index 100
    box-sizing border-box
    width 100%
    background-color #ffffff
    border-bottom #e3e3e3
    box-shadow 0px 3px 12px 0px rgba(0, 0, 0, .15)
    .logo
        width 82px
        height 0px
        padding-top 18px
        background-image url("../static/logo.png") 
        background-size cover
        background-repeat no-repeat
    .slot
        line-height 18px
        .iconfont
            margin-left 4px
            color #ccc

    .right
        .ticker
            display inline-block
            color #919191
            .num
                margin-left 4px
        .user
            display inline-block
            padding-left 12px
            color #424242
        .quit
            display inline-block
            width 48px
            text-align center
            margin-left 10px
            .iconfont
                font-size 18px
                color #2A76DC





@media(max-width 500px)
    .wrapper-nav
        .logo
            margin 2px 0
            width 64px
            padding-top 14px
        .slot
            font-size 12px
            line-height 18px
            color #424242
            .iconfont
                font-size 10px
        .right
            font-size 12px
            .quit
                display none
@media(min-width 500px)
    .wrapper-nav
        .slot
            .iconfont
                font-size 12px
                line-height 16px
